<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Welcome</a></li>
        <li class="breadcrumb-item active" aria-current="page">Microposts</li>
    </ol>
</nav>

<div class="padding-30">
  <p id="notice"><%= notice %></p>
  <h1>Microposts üìù</h1>
  <div class="margin-top-30">
    <table class="table">
      <thead>
        <tr>
          <th>Content</th>
          <th>User</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @microposts.each do |micropost| %>
          <tr>
            <td><%= micropost.content %></td>
            <td><%= micropost.user_id %></td>
            <td>
              <%= link_to 'Show', micropost, :class => 'btn btn-outline-success' %>
              <%= link_to 'Edit', edit_micropost_path(micropost), :class => 'btn btn-outline-success' %>
              <%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'New Micropost', new_micropost_path, :class => 'btn btn-success btn-sm' %>
</div>